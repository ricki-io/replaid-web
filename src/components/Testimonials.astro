---
// Retro-futuristic Testimonials
const testimonials = [
  { quote: "Response time went from hours to seconds.", author: "Maria S.", role: "Founder", id: "USR_001" },
  { quote: "We 3x'd our conversion rate in month one.", author: "James C.", role: "Sales Director", id: "USR_002" },
  { quote: "The AI replies are indistinguishable from humans.", author: "Lisa P.", role: "Head of Support", id: "USR_003" },
];
---

<section class="py-24 sm:py-40 border-t border-neon-cyan/20">
  <div class="mx-auto max-w-7xl px-6">
    <div class="mb-20 fade-in-up text-center">
      <div class="mono-label mb-4">// User.feedback</div>
      <h2 class="font-display text-4xl sm:text-5xl md:text-6xl font-bold">
        <span class="text-neon-cyan">TRANS</span><span class="text-chrome">MISSIONS</span>
      </h2>
    </div>
    
    <div class="grid md:grid-cols-3 gap-6">
      {testimonials.map((t, i) => (
        <div class="card-retro p-8 fade-in-up" style={`transition-delay: ${i * 100}ms`}>
          <div class="mono-label text-neon-pink/50 mb-6">{t.id}</div>
          <blockquote class="font-mono text-lg text-chrome/80 leading-relaxed mb-8">
            "{t.quote}"
          </blockquote>
          <div class="border-t border-neon-cyan/20 pt-6">
            <div class="font-display font-bold text-chrome">{t.author}</div>
            <div class="mono-label text-chrome/40 mt-1">{t.role}</div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
