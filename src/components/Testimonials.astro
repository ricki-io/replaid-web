---
// Scandinavian Testimonials
const testimonials = [
  { quote: "Our response time dropped from hours to seconds. Such a relief.", author: "Maria S.", role: "Founder" },
  { quote: "We tripled our conversion rate in the first month. Quietly impressive.", author: "James C.", role: "Sales Director" },
  { quote: "The AI replies feel natural and warmâ€”just like our team.", author: "Lisa P.", role: "Head of Support" },
];
---

<section class="py-24 sm:py-32">
  <div class="mx-auto max-w-6xl px-6">
    <div class="text-center mb-16 fade-in-up">
      <div class="label-soft mb-4">Testimonials</div>
      <h2 class="font-display text-4xl sm:text-5xl text-charcoal">
        Loved by teams
      </h2>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map((t, i) => (
        <div class="card-scandi p-8 fade-in-up" style={`transition-delay: ${i * 100}ms`}>
          <blockquote class="text-lg text-charcoal leading-relaxed mb-6">
            "{t.quote}"
          </blockquote>
          <div>
            <div class="font-semibold text-charcoal">{t.author}</div>
            <div class="text-sm text-charcoal-muted">{t.role}</div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
