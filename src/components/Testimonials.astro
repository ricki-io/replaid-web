---
// Swiss Testimonials - minimal quotes
const testimonials = [
  { quote: "Hours to seconds.", author: "Maria S.", role: "Founder" },
  { quote: "3× conversions.", author: "James C.", role: "Sales" },
  { quote: "Indistinguishable.", author: "Lisa P.", role: "Support" },
];
---

<section class="py-32 border-y-2 border-black">
  <div class="mx-auto max-w-7xl px-6">
    <div class="flex items-end justify-between mb-16 fade-in-up">
      <div>
        <div class="label-swiss mb-4">005 — Testimonials</div>
        <h2 class="text-huge font-black">SAID</h2>
      </div>
    </div>
    
    <div class="grid-line mb-16"></div>
    
    <div class="grid md:grid-cols-3 gap-12">
      {testimonials.map((t, i) => (
        <div class="fade-in-up" style={`transition-delay: ${i * 100}ms`}>
          <blockquote class="text-4xl sm:text-5xl font-black leading-tight mb-8">
            "{t.quote}"
          </blockquote>
          <div class="label-swiss">{t.author} — {t.role}</div>
        </div>
      ))}
    </div>
  </div>
</section>
