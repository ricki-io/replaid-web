---
// Neobrutalist Testimonials
const testimonials = [
  { quote: "Replaid is insane. Our response time went from hours to seconds.", author: "Maria S.", role: "Founder" },
  { quote: "We 3x'd our lead conversion in the first month. Not kidding.", author: "James C.", role: "Sales Director" },
  { quote: "The AI replies are so good customers can't tell the difference.", author: "Lisa P.", role: "Head of Support" },
];
---

<section class="py-16 sm:py-24 bg-brutal-cream border-t-4 border-brutal-black">
  <div class="mx-auto max-w-7xl px-4 sm:px-6">
    <h2 class="text-3xl sm:text-5xl md:text-6xl font-black uppercase mb-12 sm:mb-16 fade-in-up">
      What people <span class="bg-brutal-magenta text-brutal-cream px-2 inline-block">say</span>
    </h2>
    
    <div class="grid md:grid-cols-3 gap-6">
      {testimonials.map((t, i) => (
        <div class="card-brutal p-6 sm:p-8 fade-in-up" style={`transition-delay: ${i * 100}ms`}>
          <p class="text-lg sm:text-xl font-bold mb-6">"{t.quote}"</p>
          <div>
            <div class="font-black uppercase">{t.author}</div>
            <div class="text-sm text-brutal-black/60 font-bold uppercase">{t.role}</div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
