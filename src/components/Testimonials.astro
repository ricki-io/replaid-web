---
// Typography First Testimonials - quote-heavy design
const testimonials = [
  { quote: "Our response time went from hours to seconds.", author: "Maria S.", role: "Founder" },
  { quote: "We 3x'd our conversion rate in the first month.", author: "James C.", role: "Sales Director" },
  { quote: "The AI replies are indistinguishable from human responses.", author: "Lisa P.", role: "Head of Support" },
];
---

<section class="py-24 sm:py-40 border-t border-white/5 relative overflow-hidden">
  <!-- Background text -->
  <div class="bg-text text-[20vw] right-0 top-20">"</div>
  
  <div class="relative mx-auto max-w-7xl px-6">
    <div class="mb-20 fade-in-up">
      <div class="mono-label mb-4">Testimonials</div>
      <h2 class="text-display-md font-bold">
        Loved by <span class="text-accent">teams</span>
      </h2>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map((t, i) => (
        <div class="fade-in-up" style={`transition-delay: ${i * 100}ms`}>
          <blockquote class="font-display text-2xl sm:text-3xl font-bold leading-snug mb-8">
            "{t.quote}"
          </blockquote>
          <div>
            <div class="font-semibold text-lg">{t.author}</div>
            <div class="mono-label mt-1">{t.role}</div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
