---
// Art Deco CTA
---

<section id="cta" class="py-24 sm:py-40 relative overflow-hidden">
  <!-- Sunburst background -->
  <div class="absolute bottom-0 left-0 right-0 h-full bg-sunburst opacity-30"></div>
  
  <!-- Decorative border -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-gold/30 to-transparent"></div>
  
  <div class="relative mx-auto max-w-4xl px-6 text-center">
    <!-- Decorative element -->
    <div class="flex justify-center mb-8 fade-in-up">
      <div class="flex items-center gap-4">
        <div class="w-16 h-px bg-gold"></div>
        <div class="w-3 h-3 rotate-45 border border-gold"></div>
        <div class="w-16 h-px bg-gold"></div>
      </div>
    </div>
    
    <div class="label-deco mb-6 fade-in-up">Begin Today</div>
    
    <h2 class="font-display text-4xl sm:text-5xl md:text-6xl font-bold mb-8 fade-in-up">
      Elevate Your<br/>
      <span class="text-gold-gradient italic">Enterprise</span>
    </h2>
    
    <p class="text-lg text-ivory/60 mb-12 fade-in-up max-w-xl mx-auto">
      Fourteen days complimentary. No commitment required.
    </p>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center fade-in-up">
      <a href="#" class="btn-deco">
        Commence Trial
      </a>
      <a href="mailto:hello@replaid.pro?subject=Demo%20Request" class="btn-deco-outline">
        Arrange Demonstration
      </a>
    </div>
    
    <!-- Bottom decorative element -->
    <div class="flex justify-center mt-16 fade-in-up">
      <div class="flex items-center gap-3">
        <div class="w-8 h-px bg-gold/50"></div>
        <div class="text-gold">â—†</div>
        <div class="w-8 h-px bg-gold/50"></div>
      </div>
    </div>
  </div>
</section>
