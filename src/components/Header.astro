---
// Japandi header - minimal, intentional
---

<header id="site-header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-500">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <nav class="flex items-center justify-between h-20 md:h-24">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <div class="w-8 h-8 bg-moss-500 rounded-sm flex items-center justify-center transition-transform duration-300 group-hover:scale-105">
          <svg class="w-4 h-4 text-sand-50" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <span class="text-lg font-medium text-ink-800 tracking-tight">Replaid</span>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-10">
        <a href="#features" class="text-sm text-ink-500 hover:text-ink-800 transition-colors duration-200">Features</a>
        <a href="#how-it-works" class="text-sm text-ink-500 hover:text-ink-800 transition-colors duration-200">Process</a>
        <a href="#pricing" class="text-sm text-ink-500 hover:text-ink-800 transition-colors duration-200">Pricing</a>
      </div>
      
      <!-- CTA -->
      <div class="flex items-center gap-6">
        <a href="#" class="hidden sm:inline text-sm text-ink-500 hover:text-ink-800 transition-colors duration-200">Sign in</a>
        <a href="#cta" class="px-5 py-2.5 text-sm font-medium bg-ink-800 text-sand-50 rounded-sm hover:bg-ink-900 transition-all duration-200">
          Get Started
        </a>
      </div>
    </nav>
  </div>
</header>

<script>
  const header = document.getElementById('site-header');
  
  function updateHeader() {
    if (window.scrollY > 50) {
      header?.classList.add('bg-sand-50/90', 'backdrop-blur-md', 'border-b', 'border-stone-200/50');
    } else {
      header?.classList.remove('bg-sand-50/90', 'backdrop-blur-md', 'border-b', 'border-stone-200/50');
    }
  }
  
  window.addEventListener('scroll', updateHeader, { passive: true });
  updateHeader();
</script>
