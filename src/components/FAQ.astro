---
// Swiss FAQ - systematic
const faqs = [
  { q: "Channels?", a: "Instagram, WhatsApp, Messenger, Email, Telegram, Twitter." },
  { q: "Setup time?", a: "10 minutes." },
  { q: "Disable auto-reply?", a: "Yes." },
  { q: "Data security?", a: "Encrypted. GDPR." },
];
---

<section id="faq" class="py-32">
  <div class="mx-auto max-w-4xl px-6">
    <div class="text-center mb-16 fade-in-up">
      <div class="label-swiss mb-4">006 â€” FAQ</div>
      <h2 class="text-huge font-black">?</h2>
    </div>
    
    <div class="grid-line mb-16"></div>
    
    <div class="space-y-0">
      {faqs.map((f, i) => (
        <details class="group border-b-2 border-black fade-in-up" style={`transition-delay: ${i * 50}ms`}>
          <summary class="py-6 font-black text-xl cursor-pointer flex justify-between items-center list-none hover:accent-red transition-colors">
            {f.q}
            <span class="group-open:rotate-45 transition-transform text-2xl">+</span>
          </summary>
          <div class="pb-6 text-swiss-gray">
            {f.a}
          </div>
        </details>
      ))}
    </div>
  </div>
</section>
