---
// Neobrutalist How It Works - numbered steps
const steps = [
  { num: '01', title: 'Connect', desc: 'Link your channels. One click. Done.' },
  { num: '02', title: 'Train', desc: 'Add your knowledge. AI learns your voice.' },
  { num: '03', title: 'Profit', desc: 'Watch leads roll in. Automatically.' },
];
---

<section id="how-it-works" class="py-16 sm:py-24 bg-brutal-cream border-t-4 border-brutal-black">
  <div class="mx-auto max-w-7xl px-4 sm:px-6">
    <h2 class="text-3xl sm:text-5xl md:text-6xl font-black uppercase mb-12 sm:mb-16 fade-in-up">
      How it <span class="bg-brutal-cyan px-2 inline-block">works</span>
    </h2>
    
    <div class="grid md:grid-cols-3 gap-6 sm:gap-8">
      {steps.map((step, i) => (
        <div class="fade-in-up" style={`transition-delay: ${i * 100}ms`}>
          <div class="text-6xl sm:text-8xl font-black text-brutal-black/10 leading-none">{step.num}</div>
          <h3 class="text-2xl sm:text-3xl font-black uppercase mt-2 mb-3">{step.title}</h3>
          <p class="text-base sm:text-lg font-medium">{step.desc}</p>
        </div>
      ))}
    </div>
  </div>
</section>
