---
// Glassmorphism How It Works
const steps = [
  { num: '1', title: 'Connect', desc: 'Link your channels instantly.' },
  { num: '2', title: 'Train', desc: 'Add your knowledge base.' },
  { num: '3', title: 'Launch', desc: 'Go live in minutes.' },
];
---

<section id="how-it-works" class="py-24 sm:py-32">
  <div class="mx-auto max-w-6xl px-6">
    <div class="text-center mb-16 fade-in-up">
      <div class="label-glass mb-4">How it works</div>
      <h2 class="text-4xl sm:text-5xl font-bold">
        Ready in 10 minutes
      </h2>
    </div>
    
    <div class="grid md:grid-cols-3 gap-6">
      {steps.map((s, i) => (
        <div class="card-glass p-8 text-center fade-in-up" style={`transition-delay: ${i * 100}ms`}>
          <div class="w-14 h-14 card-glass flex items-center justify-center mx-auto mb-6 rounded-full">
            <span class="font-bold text-xl">{s.num}</span>
          </div>
          <h3 class="text-xl font-semibold mb-3">{s.title}</h3>
          <p class="text-white/60">{s.desc}</p>
        </div>
      ))}
    </div>
  </div>
</section>
