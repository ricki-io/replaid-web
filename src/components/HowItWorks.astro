---
// Swiss How It Works - numbered steps
const steps = [
  { title: 'Connect', desc: 'Link channels.' },
  { title: 'Train', desc: 'Add knowledge.' },
  { title: 'Launch', desc: 'Go live.' },
];
---

<section id="how-it-works" class="py-32">
  <div class="mx-auto max-w-7xl px-6">
    <div class="flex items-end justify-between mb-16 fade-in-up">
      <div>
        <div class="label-swiss mb-4">003 â€” Process</div>
        <h2 class="text-huge font-black">HOW</h2>
      </div>
      <div class="hidden sm:block">
        <span class="label-swiss">10 MIN SETUP</span>
      </div>
    </div>
    
    <div class="grid-line mb-16"></div>
    
    <div class="grid md:grid-cols-3 gap-0">
      {steps.map((s, i) => (
        <div class={`py-12 fade-in-up ${i < 2 ? 'md:border-r-2' : ''} border-black md:pr-12`} style={`transition-delay: ${i * 100}ms`}>
          <div class="text-9xl font-black text-swiss-light leading-none mb-6">{i + 1}</div>
          <h3 class="text-3xl font-black mb-2">{s.title}</h3>
          <p class="text-swiss-gray">{s.desc}</p>
        </div>
      ))}
    </div>
  </div>
</section>
