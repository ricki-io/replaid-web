---
// Swiss brutalist Hero - massive typography
---

<section class="min-h-screen flex flex-col justify-center pt-16 relative">
  <!-- Red accent bar -->
  <div class="absolute top-16 left-0 w-2 h-32 bg-red"></div>
  
  <div class="mx-auto max-w-7xl px-6 py-20">
    <!-- Label -->
    <div class="label-swiss mb-8 fade-in-up">001 — AI Customer Support</div>
    
    <!-- Massive headline -->
    <h1 class="text-massive font-black leading-none mb-12 fade-in-up">
      INBOX<br/>
      <span class="accent-red">=</span><br/>
      MONEY
    </h1>
    
    <!-- Grid line -->
    <div class="grid-line w-full max-w-md mb-8 fade-in-up"></div>
    
    <!-- Subheadline -->
    <p class="text-xl max-w-md mb-12 leading-relaxed fade-in-up text-swiss-gray">
      AI that qualifies leads, responds instantly, converts 24/7.
    </p>
    
    <!-- CTAs -->
    <div class="flex flex-wrap gap-4 mb-20 fade-in-up">
      <a href="#cta" class="btn-swiss">
        Start Free Trial
      </a>
      <a href="mailto:hello@replaid.pro?subject=Demo%20Request" class="btn-swiss-outline">
        Book Demo
      </a>
    </div>
    
    <!-- Stats - grid layout -->
    <div class="grid grid-cols-3 gap-8 max-w-lg fade-in-up">
      <div>
        <div class="text-4xl sm:text-5xl font-black">5M+</div>
        <div class="label-swiss mt-2">Messages</div>
      </div>
      <div>
        <div class="text-4xl sm:text-5xl font-black">10×</div>
        <div class="label-swiss mt-2">Faster</div>
      </div>
      <div>
        <div class="text-4xl sm:text-5xl font-black accent-red">4.9</div>
        <div class="label-swiss mt-2">Rating</div>
      </div>
    </div>
  </div>
</section>
