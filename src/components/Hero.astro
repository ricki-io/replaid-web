---
// Hero section
---

<section class="relative pt-32 pb-20 md:pt-40 md:pb-32 overflow-hidden">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-4xl mx-auto">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-primary-50 border border-primary-100 rounded-full mb-8 fade-in-up">
        <span class="flex h-2 w-2 relative">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-primary-500"></span>
        </span>
        <span class="text-sm font-medium text-primary-700">Voted #1 on Uneed Community</span>
      </div>
      
      <!-- Headline -->
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-extrabold tracking-tight text-gray-900 mb-6 fade-in-up">
        Your inbox is full of
        <span class="gradient-text block sm:inline"> money</span>
      </h1>
      
      <!-- Subheadline -->
      <p class="text-lg sm:text-xl text-gray-600 max-w-2xl mx-auto mb-10 fade-in-up">
        Never miss an opportunity again. Replaid qualifies leads, sends notifications, triggers automations, and keeps your pipeline moving 24/7.
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 fade-in-up">
        <a href="#cta" class="btn-primary text-lg !py-4 !px-8 w-full sm:w-auto">
          Start Free Trial
          <svg class="w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
        <a href="#how-it-works" class="btn-secondary text-lg !py-4 !px-8 w-full sm:w-auto">
          <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Watch Demo
        </a>
      </div>
      
      <!-- Social Proof -->
      <div class="mt-12 pt-8 border-t border-gray-100 fade-in-up">
        <p class="text-sm text-gray-500 mb-4">Trusted by teams managing thousands of conversations</p>
        <div class="flex items-center justify-center gap-8 opacity-60 grayscale">
          <div class="text-2xl font-bold text-gray-400">Shopify</div>
          <div class="text-2xl font-bold text-gray-400">Notion</div>
          <div class="text-2xl font-bold text-gray-400">Stripe</div>
          <div class="text-2xl font-bold text-gray-400">Vercel</div>
        </div>
      </div>
    </div>
    
    <!-- Hero Visual -->
    <div class="mt-16 md:mt-24 relative fade-in-up">
      <div class="relative mx-auto max-w-5xl">
        <!-- Glow effect -->
        <div class="absolute -inset-4 bg-gradient-to-r from-primary-500/20 via-accent-500/20 to-primary-500/20 rounded-3xl blur-2xl"></div>
        
        <!-- Browser mockup -->
        <div class="relative glass rounded-2xl overflow-hidden">
          <!-- Browser bar -->
          <div class="flex items-center gap-2 px-4 py-3 bg-gray-100/50 border-b border-gray-200/50">
            <div class="flex gap-1.5">
              <div class="w-3 h-3 rounded-full bg-red-400"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
              <div class="w-3 h-3 rounded-full bg-green-400"></div>
            </div>
            <div class="flex-1 mx-4">
              <div class="w-full max-w-md mx-auto h-7 bg-white rounded-lg border border-gray-200 flex items-center px-3">
                <svg class="w-3.5 h-3.5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
                <span class="ml-2 text-xs text-gray-500">app.replaid.pro</span>
              </div>
            </div>
          </div>
          
          <!-- App content preview -->
          <div class="p-6 bg-gradient-to-br from-gray-50 to-white min-h-[400px]">
            <div class="grid grid-cols-12 gap-4 h-full">
              <!-- Sidebar -->
              <div class="col-span-3 space-y-3">
                <div class="h-10 bg-primary-100 rounded-lg"></div>
                <div class="space-y-2">
                  <div class="h-8 bg-gray-100 rounded-lg"></div>
                  <div class="h-8 bg-primary-500/20 rounded-lg border-l-4 border-primary-500"></div>
                  <div class="h-8 bg-gray-100 rounded-lg"></div>
                  <div class="h-8 bg-gray-100 rounded-lg"></div>
                </div>
              </div>
              
              <!-- Main content -->
              <div class="col-span-6 space-y-4">
                <div class="flex gap-3">
                  <div class="h-8 w-24 bg-primary-500 rounded-lg"></div>
                  <div class="h-8 w-20 bg-gray-100 rounded-lg"></div>
                  <div class="h-8 w-16 bg-gray-100 rounded-lg"></div>
                </div>
                <div class="space-y-3">
                  <!-- Message items -->
                  <div class="p-4 bg-white rounded-xl border border-gray-100 shadow-sm flex items-start gap-3">
                    <div class="w-10 h-10 bg-gradient-to-br from-pink-400 to-purple-500 rounded-full flex-shrink-0"></div>
                    <div class="flex-1 space-y-2">
                      <div class="flex items-center gap-2">
                        <div class="h-4 w-24 bg-gray-200 rounded"></div>
                        <span class="px-2 py-0.5 bg-green-100 text-green-700 text-xs rounded-full font-medium">Hot Lead</span>
                      </div>
                      <div class="h-3 w-full bg-gray-100 rounded"></div>
                      <div class="h-3 w-3/4 bg-gray-100 rounded"></div>
                    </div>
                  </div>
                  <div class="p-4 bg-white rounded-xl border border-gray-100 shadow-sm flex items-start gap-3">
                    <div class="w-10 h-10 bg-gradient-to-br from-blue-400 to-cyan-500 rounded-full flex-shrink-0"></div>
                    <div class="flex-1 space-y-2">
                      <div class="flex items-center gap-2">
                        <div class="h-4 w-20 bg-gray-200 rounded"></div>
                        <span class="px-2 py-0.5 bg-yellow-100 text-yellow-700 text-xs rounded-full font-medium">Question</span>
                      </div>
                      <div class="h-3 w-full bg-gray-100 rounded"></div>
                    </div>
                  </div>
                  <div class="p-4 bg-gray-50 rounded-xl border border-gray-100 flex items-start gap-3 opacity-60">
                    <div class="w-10 h-10 bg-gray-300 rounded-full flex-shrink-0"></div>
                    <div class="flex-1 space-y-2">
                      <div class="flex items-center gap-2">
                        <div class="h-4 w-16 bg-gray-200 rounded"></div>
                        <span class="px-2 py-0.5 bg-gray-200 text-gray-500 text-xs rounded-full font-medium">Spam</span>
                      </div>
                      <div class="h-3 w-2/3 bg-gray-100 rounded"></div>
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- Right panel -->
              <div class="col-span-3 space-y-3">
                <div class="p-4 bg-white rounded-xl border border-gray-100">
                  <div class="flex items-center gap-2 mb-3">
                    <div class="w-8 h-8 bg-gradient-to-br from-pink-400 to-purple-500 rounded-full"></div>
                    <div class="h-4 w-20 bg-gray-200 rounded"></div>
                  </div>
                  <div class="space-y-2">
                    <div class="flex justify-between text-xs">
                      <span class="text-gray-500">Sentiment</span>
                      <span class="text-green-600 font-medium">Positive</span>
                    </div>
                    <div class="flex justify-between text-xs">
                      <span class="text-gray-500">Intent</span>
                      <span class="text-primary-600 font-medium">Purchase</span>
                    </div>
                    <div class="flex justify-between text-xs">
                      <span class="text-gray-500">Score</span>
                      <span class="text-gray-900 font-medium">92/100</span>
                    </div>
                  </div>
                </div>
                <div class="p-3 bg-primary-50 rounded-xl border border-primary-100">
                  <p class="text-xs text-primary-700 font-medium">ðŸ¤– AI Suggestion</p>
                  <p class="text-xs text-primary-600 mt-1">Send pricing info and schedule a demo</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
