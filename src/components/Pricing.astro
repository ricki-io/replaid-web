---
// Swiss Pricing - systematic
const plans = [
  { name: 'Starter', price: '29', features: ['1 channel', '500 msgs/mo', 'Basic AI'], highlight: false },
  { name: 'Pro', price: '79', features: ['5 channels', '5K msgs/mo', 'Advanced AI', 'Team'], highlight: true },
  { name: 'Scale', price: '199', features: ['Unlimited', '25K msgs/mo', 'Custom AI', 'API'], highlight: false },
];
---

<section id="pricing" class="py-32 bg-swiss-light">
  <div class="mx-auto max-w-7xl px-6">
    <div class="flex items-end justify-between mb-16 fade-in-up">
      <div>
        <div class="label-swiss mb-4">004 — Pricing</div>
        <h2 class="text-huge font-black">COST</h2>
      </div>
    </div>
    
    <div class="grid-line mb-16 bg-black"></div>
    
    <div class="grid md:grid-cols-3 gap-0">
      {plans.map((p, i) => (
        <div class={`bg-white border-2 border-black p-8 sm:p-10 fade-in-up flex flex-col ${p.highlight ? 'md:order-2 order-first bg-black text-white' : i === 0 ? 'md:order-1' : 'md:order-3'}`} style={`transition-delay: ${i * 100}ms`}>
          {p.highlight && <div class="label-swiss text-red-500 mb-4">Recommended</div>}
          <div class="label-swiss mb-2 ${p.highlight ? 'text-white/60' : ''}">{String(i+1).padStart(2,'0')}</div>
          <h3 class="text-2xl font-black mb-4">{p.name}</h3>
          <div class="text-5xl font-black mb-8">${p.price}<span class="text-lg font-normal opacity-50">/mo</span></div>
          <ul class="space-y-3 mb-8 flex-1">
            {p.features.map(f => (
              <li class={`flex items-center gap-3 ${p.highlight ? 'text-white/70' : 'text-swiss-gray'}`}>
                <span class={p.highlight ? 'text-red-500' : ''}>→</span>
                {f}
              </li>
            ))}
          </ul>
          <a href="#cta" class={p.highlight ? 'btn-swiss bg-white text-black hover:bg-red-500 hover:text-white' : 'btn-swiss-outline'}>
            Select
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
