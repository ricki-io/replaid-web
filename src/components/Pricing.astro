---
// Neobrutalist Pricing - bold cards
const plans = [
  {
    name: 'Starter',
    price: '29',
    features: ['1 channel', '500 msgs/mo', 'Basic AI', 'Lead scoring'],
    color: 'bg-brutal-cream',
    highlight: false,
  },
  {
    name: 'Pro',
    price: '79',
    features: ['5 channels', '5K msgs/mo', 'Advanced AI', 'Team collab', 'Integrations'],
    color: 'bg-brutal-yellow',
    highlight: true,
  },
  {
    name: 'Scale',
    price: '199',
    features: ['Unlimited', '25K msgs/mo', 'Custom AI', 'API access', 'Dedicated support'],
    color: 'bg-brutal-cyan',
    highlight: false,
  },
];
---

<section id="pricing" class="py-16 sm:py-24 bg-brutal-black text-brutal-cream">
  <div class="mx-auto max-w-7xl px-4 sm:px-6">
    <h2 class="text-3xl sm:text-5xl md:text-6xl font-black uppercase mb-4 fade-in-up">
      Pricing
    </h2>
    <p class="text-lg sm:text-xl mb-12 sm:mb-16 fade-in-up">No BS. No hidden fees. Cancel anytime.</p>
    
    <div class="grid md:grid-cols-3 gap-6">
      {plans.map((plan, i) => (
        <div 
          class={`border-4 border-brutal-cream p-6 sm:p-8 ${plan.color} text-brutal-black fade-in-up ${plan.highlight ? 'md:-mt-4 md:mb-4' : ''}`}
          style={`transition-delay: ${i * 100}ms`}
        >
          {plan.highlight && (
            <div class="bg-brutal-black text-brutal-yellow px-3 py-1 text-sm font-bold uppercase inline-block mb-4">
              Most Popular
            </div>
          )}
          <h3 class="text-xl sm:text-2xl font-black uppercase mb-2">{plan.name}</h3>
          <div class="text-4xl sm:text-5xl font-black mb-6">${plan.price}<span class="text-lg font-bold">/mo</span></div>
          <ul class="space-y-2 mb-8">
            {plan.features.map(f => (
              <li class="font-medium flex items-center gap-2">
                <span class="font-black">âœ“</span> {f}
              </li>
            ))}
          </ul>
          <a href="#cta" class={`block text-center py-3 px-6 border-4 border-brutal-black font-bold uppercase ${plan.highlight ? 'bg-brutal-black text-brutal-yellow' : 'bg-brutal-black text-brutal-cream'} hover:translate-x-1 hover:translate-y-1 transition-transform`}>
            Get Started
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
