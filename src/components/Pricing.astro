---
// Pricing section
const plans = [
  {
    name: 'Starter',
    description: 'Perfect for solopreneurs and small creators',
    price: 29,
    period: '/month',
    highlight: false,
    features: [
      '1 channel connected',
      '500 messages/month',
      'Basic AI auto-replies',
      'Lead scoring',
      'Email notifications',
      '7-day message history',
    ],
    cta: 'Start Free Trial',
    ctaStyle: 'secondary',
  },
  {
    name: 'Pro',
    description: 'For growing teams who need more power',
    price: 79,
    period: '/month',
    highlight: true,
    badge: 'Most Popular',
    features: [
      '5 channels connected',
      '5,000 messages/month',
      'Advanced AI with brand voice',
      'Priority lead scoring',
      'Slack & webhook integrations',
      'Unlimited message history',
      'Team collaboration (3 seats)',
      'Custom workflows',
    ],
    cta: 'Start Free Trial',
    ctaStyle: 'primary',
  },
  {
    name: 'Scale',
    description: 'For high-volume businesses and agencies',
    price: 199,
    period: '/month',
    highlight: false,
    features: [
      'Unlimited channels',
      '25,000 messages/month',
      'Custom AI training',
      'Advanced analytics',
      'API access',
      'Dedicated support',
      'Unlimited team seats',
      'White-label options',
      'SLA guarantee',
    ],
    cta: 'Contact Sales',
    ctaStyle: 'secondary',
  },
];
---

<section id="pricing" class="py-24 md:py-32 bg-gradient-to-b from-gray-50 to-white">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-16 fade-in-up">
      <span class="inline-block px-4 py-1.5 bg-primary-50 text-primary-700 text-sm font-medium rounded-full mb-4">Pricing</span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
        Simple pricing, <span class="gradient-text">no surprises</span>
      </h2>
      <p class="text-lg text-gray-600">
        Start free and upgrade as you grow. All plans include a 14-day trial.
      </p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-6 lg:gap-8 max-w-6xl mx-auto">
      {plans.map((plan, index) => (
        <div 
          class:list={[
            'relative rounded-2xl p-8 fade-in-up transition-all duration-300',
            plan.highlight 
              ? 'bg-gradient-to-b from-primary-600 to-primary-700 text-white shadow-2xl shadow-primary-500/30 scale-105 md:-my-4 z-10' 
              : 'bg-white border border-gray-200 hover:border-gray-300 hover:shadow-lg'
          ]}
          style={`transition-delay: ${index * 100}ms`}
        >
          {plan.badge && (
            <div class="absolute -top-4 left-1/2 -translate-x-1/2">
              <span class="inline-block px-4 py-1 bg-gradient-to-r from-amber-400 to-orange-400 text-white text-sm font-semibold rounded-full shadow-lg">
                {plan.badge}
              </span>
            </div>
          )}
          
          <div class="mb-6">
            <h3 class:list={['text-xl font-bold mb-2', plan.highlight ? 'text-white' : 'text-gray-900']}>
              {plan.name}
            </h3>
            <p class:list={['text-sm', plan.highlight ? 'text-primary-100' : 'text-gray-500']}>
              {plan.description}
            </p>
          </div>
          
          <div class="mb-6">
            <span class:list={['text-5xl font-extrabold', plan.highlight ? 'text-white' : 'text-gray-900']}>
              ${plan.price}
            </span>
            <span class:list={['text-lg', plan.highlight ? 'text-primary-200' : 'text-gray-500']}>
              {plan.period}
            </span>
          </div>
          
          <ul class="space-y-3 mb-8">
            {plan.features.map((feature) => (
              <li class="flex items-start gap-3">
                <svg class:list={['w-5 h-5 flex-shrink-0 mt-0.5', plan.highlight ? 'text-primary-200' : 'text-primary-500']} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
                <span class:list={['text-sm', plan.highlight ? 'text-primary-50' : 'text-gray-600']}>
                  {feature}
                </span>
              </li>
            ))}
          </ul>
          
          <a 
            href="#cta" 
            class:list={[
              'block w-full py-3 px-6 text-center font-medium rounded-xl transition-all duration-200',
              plan.highlight 
                ? 'bg-white text-primary-600 hover:bg-gray-50 shadow-lg hover:shadow-xl hover:-translate-y-0.5' 
                : 'bg-gray-900 text-white hover:bg-gray-800 hover:-translate-y-0.5'
            ]}
          >
            {plan.cta}
          </a>
        </div>
      ))}
    </div>
    
    <!-- Enterprise callout -->
    <div class="mt-12 text-center fade-in-up">
      <p class="text-gray-600 mb-2">Need more? Custom enterprise plans available.</p>
      <a href="#" class="inline-flex items-center gap-2 text-primary-600 font-medium hover:text-primary-700 transition-colors group">
        Contact our sales team
        <svg class="w-4 h-4 group-hover:translate-x-0.5 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
    </div>
  </div>
</section>
