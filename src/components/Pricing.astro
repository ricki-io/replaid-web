---
// Tech Forward Pricing
const plans = [
  { name: 'Starter', price: '29', features: ['1 channel', '500 msgs/mo', 'GPT-3.5', 'Lead scoring'], highlight: false },
  { name: 'Pro', price: '79', features: ['5 channels', '5K msgs/mo', 'GPT-4o', 'Team seats', 'API access'], highlight: true },
  { name: 'Enterprise', price: '199', features: ['Unlimited', '25K msgs/mo', 'Custom models', 'SSO', 'SLA'], highlight: false },
];
---

<section id="pricing" class="py-24 sm:py-32">
  <div class="mx-auto max-w-6xl px-6">
    <div class="text-center mb-16 fade-in-up">
      <div class="label-tech mb-4">// PRICING</div>
      <h2 class="text-4xl sm:text-5xl font-bold mb-4">
        Simple <span class="text-gradient">pricing</span>
      </h2>
      <p class="text-tech-400">Start free. Scale as you grow.</p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">
      {plans.map((p, i) => (
        <div class={`card-tech p-6 sm:p-8 fade-in-up flex flex-col ${p.highlight ? 'border-electric/50 shadow-tech md:order-2 order-first' : i === 0 ? 'md:order-1' : 'md:order-3'}`} style={`transition-delay: ${i * 100}ms`}>
          {p.highlight && <div class="label-tech mb-4">MOST POPULAR</div>}
          <h3 class="text-xl font-semibold mb-2">{p.name}</h3>
          <div class="mb-6">
            <span class="text-5xl font-bold">${p.price}</span>
            <span class="text-tech-500">/mo</span>
          </div>
          <ul class="space-y-3 mb-8 flex-1">
            {p.features.map(f => (
              <li class="flex items-center gap-3 text-tech-300 text-sm">
                <span class="text-electric">âœ“</span>
                {f}
              </li>
            ))}
          </ul>
          <a href="#cta" class={p.highlight ? 'btn-tech' : 'btn-tech-outline'}>
            Get Started
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
