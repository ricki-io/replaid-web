---
// Typography First Pricing - type-driven, minimal cards
const plans = [
  { name: 'Starter', price: '29', features: ['1 channel', '500 msgs/mo', 'Basic AI', 'Lead scoring'], highlight: false },
  { name: 'Pro', price: '79', features: ['5 channels', '5K msgs/mo', 'Advanced AI', 'Team collab', 'Integrations'], highlight: true },
  { name: 'Scale', price: '199', features: ['Unlimited', '25K msgs/mo', 'Custom AI', 'API access', 'Dedicated support'], highlight: false },
];
---

<section id="pricing" class="py-16 sm:py-24">
  <div class="mx-auto max-w-7xl px-6">
    <div class="mb-20 fade-in-up text-center">
      <div class="mono-label mb-4">Pricing</div>
      <h2 class="text-display-md font-bold">
        Simple<span class="text-accent">,</span> transparent
      </h2>
    </div>
    
    <div class="grid md:grid-cols-3 gap-px bg-white/10 max-w-5xl mx-auto">
      {plans.map((p, i) => (
        <div class={`p-8 sm:p-10 fade-in-up flex flex-col relative ${p.highlight ? 'md:order-2 order-first bg-ink-900 border-2 border-white/20' : i === 0 ? 'md:order-1 bg-ink-950' : 'md:order-3 bg-ink-950'}`} style={`transition-delay: ${i * 100}ms`}>
          {p.highlight && <div class="mono-label text-accent absolute top-4 right-4 sm:top-6 sm:right-6">Most Popular</div>}
          <h3 class="font-display text-2xl font-bold mb-2">{p.name}</h3>
          <div class="mb-8">
            <span class="font-display text-5xl sm:text-7xl font-bold tracking-tighter">${p.price}</span>
            <span class="text-ink-300 text-lg">/mo</span>
          </div>
          <ul class="space-y-4 mb-10 flex-1">
            {p.features.map(f => (
              <li class="flex items-center gap-3 text-ink-100">
                <span class="text-accent font-mono">â†’</span>
                {f}
              </li>
            ))}
          </ul>
          <a href="#cta" class={`block text-center py-4 font-display font-semibold transition-colors ${p.highlight ? 'bg-white text-black hover:bg-accent hover:text-white' : 'border-2 border-white/20 text-white hover:border-white'}`}>
            Get Started
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
