---
// Swiss channels - minimal grid
const channels = ['Instagram', 'WhatsApp', 'Messenger', 'Email', 'Telegram', 'Twitter'];
---

<section class="border-y-2 border-black">
  <div class="mx-auto max-w-7xl px-6 py-6">
    <div class="flex flex-wrap items-center gap-8">
      <span class="label-swiss">Integrations</span>
      <div class="grid-line flex-1 hidden sm:block"></div>
      {channels.map((ch, i) => (
        <span class="label-swiss hover:accent-red transition-colors cursor-default">{String(i+1).padStart(2,'0')}â€”{ch}</span>
      ))}
    </div>
  </div>
</section>
