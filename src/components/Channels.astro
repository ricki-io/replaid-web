---
// Gradient Modern channels
const channels = ['Instagram', 'WhatsApp', 'Messenger', 'Email', 'Telegram', 'Twitter'];
---

<section class="py-10 border-y border-white/5">
  <div class="mx-auto max-w-6xl px-6">
    <div class="flex flex-col sm:flex-row items-center justify-center gap-6 sm:gap-8">
      <span class="text-sm text-dark-500">Works with</span>
      <div class="flex flex-wrap justify-center gap-6">
        {channels.map(ch => (
          <span class="text-sm text-dark-400 hover:text-aurora transition-colors cursor-default font-medium">{ch}</span>
        ))}
      </div>
    </div>
  </div>
</section>
