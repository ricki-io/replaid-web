---
// Scandinavian channels
const channels = ['Instagram', 'WhatsApp', 'Messenger', 'Email', 'Telegram', 'Twitter'];
---

<section class="py-12 bg-cream-dark">
  <div class="mx-auto max-w-6xl px-6">
    <div class="flex flex-col sm:flex-row items-center justify-center gap-6 sm:gap-8">
      <span class="text-sm text-charcoal-muted">Works with</span>
      <div class="flex flex-wrap justify-center gap-6 sm:gap-8">
        {channels.map(ch => (
          <span class="text-sm font-medium text-charcoal/60 hover:text-charcoal transition-colors cursor-default">{ch}</span>
        ))}
      </div>
    </div>
  </div>
</section>
