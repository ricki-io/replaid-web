---
// Dark Mode First channels
const channels = ['Instagram', 'WhatsApp', 'Messenger', 'Email', 'Telegram', 'Twitter'];
---

<section class="py-12 border-y border-white/5">
  <div class="mx-auto max-w-6xl px-4 sm:px-6">
    <div class="flex flex-wrap items-center justify-center gap-4 sm:gap-6">
      <span class="text-sm text-dark-200">Connects with:</span>
      {channels.map(ch => (
        <span class="px-4 py-2 bg-white/5 border border-white/10 rounded-lg text-sm text-dark-100">{ch}</span>
      ))}
    </div>
  </div>
</section>
