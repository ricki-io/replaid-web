---
// Retro-futuristic Features
const features = [
  { id: 'SYS_01', title: 'Unified Inbox', desc: 'All messages in one interface. No more tab chaos.' },
  { id: 'SYS_02', title: 'Smart Scoring', desc: 'AI identifies who\'s ready to buy.' },
  { id: 'SYS_03', title: 'Auto-Replies', desc: 'Respond instantly, even while you sleep.' },
  { id: 'SYS_04', title: 'Human Handoff', desc: 'AI handles routine. You handle exceptions.' },
];
---

<section id="features" class="py-24 sm:py-40 relative">
  <div class="mx-auto max-w-7xl px-6">
    <div class="mb-20 fade-in-up text-center">
      <div class="mono-label mb-4">// System.features</div>
      <h2 class="font-display text-4xl sm:text-5xl md:text-6xl font-bold">
        <span class="text-chrome">CORE</span> <span class="text-neon-pink">MODULES</span>
      </h2>
    </div>
    
    <div class="grid md:grid-cols-2 gap-6">
      {features.map((f, i) => (
        <div class="card-retro p-8 fade-in-up hover:border-neon-pink/50 transition-colors" style={`transition-delay: ${i * 100}ms`}>
          <div class="flex items-start gap-4">
            <span class="font-mono text-neon-cyan text-sm">{f.id}</span>
            <div>
              <h3 class="font-display text-xl sm:text-2xl font-bold mb-3 text-chrome">{f.title}</h3>
              <p class="text-chrome/60 font-mono text-sm leading-relaxed">{f.desc}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
