---
// Swiss Features - systematic grid
const features = [
  { num: '01', title: 'Unified Inbox', desc: 'All channels. One interface.' },
  { num: '02', title: 'Lead Scoring', desc: 'AI finds hot prospects.' },
  { num: '03', title: 'Auto-Reply', desc: 'Instant. Always on.' },
  { num: '04', title: 'Handoff', desc: 'Human when needed.' },
];
---

<section id="features" class="py-32">
  <div class="mx-auto max-w-7xl px-6">
    <!-- Section header -->
    <div class="flex items-end justify-between mb-16 fade-in-up">
      <div>
        <div class="label-swiss mb-4">002 â€” Features</div>
        <h2 class="text-huge font-black">WHAT</h2>
      </div>
      <div class="hidden sm:block text-right">
        <span class="text-8xl font-black accent-red">04</span>
      </div>
    </div>
    
    <div class="grid-line mb-16"></div>
    
    <!-- Features grid -->
    <div class="grid md:grid-cols-2 gap-0 border-2 border-black">
      {features.map((f, i) => (
        <div class={`p-8 sm:p-12 fade-in-up ${i < 2 ? 'border-b-2' : ''} ${i % 2 === 0 ? 'md:border-r-2' : ''} border-black`} style={`transition-delay: ${i * 100}ms`}>
          <div class="flex items-start justify-between mb-6">
            <span class="text-6xl font-black text-black/20">{f.num}</span>
          </div>
          <h3 class="text-2xl font-black mb-3">{f.title}</h3>
          <p class="text-swiss-gray">{f.desc}</p>
        </div>
      ))}
    </div>
  </div>
</section>
