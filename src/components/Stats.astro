---
// Tech Forward Stats
const stats = [
  { value: '10×', label: 'Faster response' },
  { value: '90%', label: 'Automation rate' },
  { value: '3×', label: 'Conversion lift' },
  { value: '99.9%', label: 'Uptime' },
];
---

<section class="py-20 sm:py-24 relative">
  <!-- Gradient line -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-electric/30 to-transparent"></div>
  <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-violet/30 to-transparent"></div>
  
  <div class="mx-auto max-w-6xl px-6">
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
      {stats.map((s, i) => (
        <div class="text-center fade-in-up" style={`transition-delay: ${i * 100}ms`}>
          <div class="text-5xl sm:text-6xl font-bold text-gradient">{s.value}</div>
          <div class="mt-2 text-sm text-tech-500">{s.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>
