---
// Typography First Stats - massive numbers
const stats = [
  { value: '24/7', label: 'Always Available' },
  { value: 'Zero', label: 'Leads Missed' },
  { value: 'Every', label: 'Channel Connected' },
  { value: 'Smart', label: 'Agentic Workflow' },
];
---

<section class="py-12 sm:py-16 border-y border-white/5 bg-ink-900/30">
  <div class="mx-auto max-w-7xl px-6">
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 sm:gap-8">
      {stats.map((s, i) => (
        <div class="text-center fade-in-up" style={`transition-delay: ${i * 100}ms`}>
          <div class="font-display text-4xl sm:text-7xl font-bold tracking-tighter text-accent">{s.value}</div>
          <div class="mono-label mt-4">{s.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>
