---
// Retro-futuristic Stats
const stats = [
  { value: '10×', label: 'response_speed' },
  { value: '90%', label: 'noise_reduction' },
  { value: '3×', label: 'conversion_rate' },
  { value: '24/7', label: 'uptime_status' },
];
---

<section class="py-24 sm:py-32 border-y border-neon-cyan/20 relative overflow-hidden">
  <!-- Background glow -->
  <div class="absolute inset-0 bg-gradient-to-r from-neon-pink/5 via-transparent to-neon-cyan/5"></div>
  
  <div class="relative mx-auto max-w-7xl px-6">
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 sm:gap-12">
      {stats.map((s, i) => (
        <div class="text-center fade-in-up" style={`transition-delay: ${i * 100}ms`}>
          <div class="font-display text-5xl sm:text-7xl font-black tracking-tight text-neon-cyan animate-pulse-glow">{s.value}</div>
          <div class="mono-label mt-4 text-neon-pink/70">{s.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>
