---
// Glassmorphism Stats
const stats = [
  { value: '10×', label: 'Faster' },
  { value: '90%', label: 'Automated' },
  { value: '3×', label: 'Conversions' },
  { value: '24/7', label: 'Active' },
];
---

<section class="py-20 sm:py-24">
  <div class="mx-auto max-w-6xl px-6">
    <div class="card-glass p-8 sm:p-12">
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
        {stats.map((s, i) => (
          <div class="text-center fade-in-up" style={`transition-delay: ${i * 100}ms`}>
            <div class="text-4xl sm:text-5xl font-bold bg-gradient-to-r from-accent-green to-accent-emerald bg-clip-text text-transparent">{s.value}</div>
            <div class="mt-2 text-white/50">{s.label}</div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
