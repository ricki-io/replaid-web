---
// Swiss Stats - bold numbers
const stats = [
  { value: '10×', label: 'Speed' },
  { value: '90%', label: 'Automated' },
  { value: '3×', label: 'Conversions' },
  { value: '24/7', label: 'Uptime' },
];
---

<section class="py-24 bg-black text-white">
  <div class="mx-auto max-w-7xl px-6">
    <div class="grid grid-cols-2 lg:grid-cols-4">
      {stats.map((s, i) => (
        <div class={`py-12 text-center fade-in-up ${i < 3 ? 'lg:border-r' : ''} border-white/20`} style={`transition-delay: ${i * 100}ms`}>
          <div class="text-6xl sm:text-7xl font-black">{s.value}</div>
          <div class="label-swiss mt-4 text-white/60">{s.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>
