---
// Scandinavian Stats
const stats = [
  { value: '10×', label: 'Faster responses' },
  { value: '90%', label: 'Less busywork' },
  { value: '3×', label: 'More conversions' },
  { value: '24/7', label: 'Always there' },
];
---

<section class="py-20 sm:py-28 bg-sage/10">
  <div class="mx-auto max-w-6xl px-6">
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 sm:gap-12">
      {stats.map((s, i) => (
        <div class="text-center fade-in-up" style={`transition-delay: ${i * 100}ms`}>
          <div class="font-display text-5xl sm:text-6xl text-sage-dark">{s.value}</div>
          <div class="mt-3 text-sm text-charcoal-muted">{s.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>
