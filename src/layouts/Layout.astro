---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "The AI inbox that turns messages into leads." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content="#faf8f5" />
    <meta name="robots" content="noindex, nofollow" />
    
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    
    <title>{title}</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=DM+Serif+Display&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen bg-cream text-charcoal antialiased overflow-x-hidden">
    <slot />
    
    <style is:global>
      body {
        font-family: 'DM Sans', system-ui, sans-serif;
        background: #faf8f5;
      }
      
      h1, h2, h3, h4, h5, h6 {
        font-family: 'DM Serif Display', Georgia, serif;
        font-weight: 400;
      }
      
      ::selection {
        background-color: #9caa97;
        color: #fff;
      }
      
      html {
        scroll-behavior: smooth;
      }
      
      /* Scandinavian button - warm and inviting */
      .btn-scandi {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 1rem 2rem;
        font-family: 'DM Sans', system-ui, sans-serif;
        font-weight: 600;
        font-size: 0.9375rem;
        background: #2d2d2d;
        color: #faf8f5;
        border: none;
        border-radius: 0.75rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
      }
      
      .btn-scandi:hover {
        background: #4a4a4a;
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(0,0,0,0.12);
      }
      
      .btn-scandi-outline {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 1rem 2rem;
        font-family: 'DM Sans', system-ui, sans-serif;
        font-weight: 600;
        font-size: 0.9375rem;
        background: transparent;
        color: #2d2d2d;
        border: 2px solid #2d2d2d;
        border-radius: 0.75rem;
        transition: all 0.3s ease;
      }
      
      .btn-scandi-outline:hover {
        background: #2d2d2d;
        color: #faf8f5;
      }
      
      /* Wood accent button */
      .btn-wood {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 1rem 2rem;
        font-family: 'DM Sans', system-ui, sans-serif;
        font-weight: 600;
        font-size: 0.9375rem;
        background: #b8956c;
        color: #fff;
        border: none;
        border-radius: 0.75rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(184,149,108,0.3);
      }
      
      .btn-wood:hover {
        background: #a07d5a;
        transform: translateY(-2px);
      }
      
      /* Scandi card */
      .card-scandi {
        background: #fff;
        border: 1px solid rgba(0,0,0,0.05);
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.04);
        transition: all 0.3s ease;
      }
      
      .card-scandi:hover {
        box-shadow: 0 8px 30px rgba(0,0,0,0.08);
        transform: translateY(-2px);
      }
      
      /* Soft label */
      .label-soft {
        font-size: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        color: #9caa97;
      }
      
      /* Fade in */
      .fade-in-up {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.6s ease, transform 0.6s ease;
      }
      
      .fade-in-up.visible {
        opacity: 1;
        transform: translateY(0);
      }
    </style>

    <script>
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) entry.target.classList.add('visible');
        });
      }, { threshold: 0.1 });
      document.querySelectorAll('.fade-in-up').forEach(el => observer.observe(el));
    </script>
  </body>
</html>
