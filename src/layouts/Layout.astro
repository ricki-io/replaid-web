---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "The AI inbox that turns messages into leads. Qualify leads, automate replies, and never miss an opportunity." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <meta name="color-scheme" content="light" />
    <meta name="author" content="Replaid" />
    <meta name="generator" content={Astro.generator} />
    
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    
    <title>{title}</title>
    
    <!-- Google Fonts: Inter (bold weights) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;800;900&display=swap" rel="stylesheet" />
    
    <meta name="theme-color" content="#FFDE59" />
    <meta name="robots" content="noindex, nofollow" />
  </head>
  <body class="min-h-screen bg-brutal-cream text-brutal-black antialiased overflow-x-hidden">
    <slot />
    
    <style is:global>
      body {
        font-family: 'Inter', system-ui, sans-serif;
      }
      
      h1, h2, h3, h4, h5, h6 {
        font-family: 'Inter', system-ui, sans-serif;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: -0.02em;
      }
      
      /* Neobrutalist selection */
      ::selection {
        background-color: #FFDE59;
        color: #000000;
      }
      
      /* No smooth scroll - brutal is instant */
      html {
        scroll-behavior: auto;
      }
      
      /* Brutal focus */
      a:focus-visible, button:focus-visible {
        outline: 4px solid #000000;
        outline-offset: 2px;
      }
      
      /* Brutal buttons */
      .btn-brutal {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 1rem 2rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        border: 4px solid #000000;
        background: #FFDE59;
        color: #000000;
        box-shadow: 4px 4px 0 0 #000000;
        transition: all 0.1s ease;
      }
      
      .btn-brutal:hover {
        transform: translate(2px, 2px);
        box-shadow: 2px 2px 0 0 #000000;
      }
      
      .btn-brutal:active {
        transform: translate(4px, 4px);
        box-shadow: none;
      }
      
      .btn-brutal-outline {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 1rem 2rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        border: 4px solid #000000;
        background: transparent;
        color: #000000;
        box-shadow: 4px 4px 0 0 #000000;
        transition: all 0.1s ease;
      }
      
      .btn-brutal-outline:hover {
        background: #000000;
        color: #FFFFFF;
        transform: translate(2px, 2px);
        box-shadow: 2px 2px 0 0 #000000;
      }
      
      /* Brutal card */
      .card-brutal {
        border: 4px solid #000000;
        background: #FFFFFF;
        box-shadow: 4px 4px 0 0 #000000;
      }
      
      /* Fade in */
      .fade-in-up {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.3s ease, transform 0.3s ease;
      }
      
      .fade-in-up.visible {
        opacity: 1;
        transform: translateY(0);
      }
    </style>

    <script>
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          }
        });
      }, { threshold: 0.1 });

      document.querySelectorAll('.fade-in-up').forEach(el => observer.observe(el));
    </script>
  </body>
</html>
